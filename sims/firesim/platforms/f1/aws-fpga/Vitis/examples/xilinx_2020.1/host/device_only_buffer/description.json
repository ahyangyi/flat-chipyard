{
    "name": "Device Only Buffer (C)", 
    "description": [
        "This example will demonstrate how to create buffers in global memory which are not mapped to host."
    ],
    "flow": "vitis",
    "keywords": [
        "CL_MEM_HOST_NO_ACCESS"
    ], 
    "key_concepts": [
        "Device only buffer" 
               
    ], 
    "platform_type": "pcie", 
    "os": [
        "Linux"
    ], 
    "runtime": [
        "OpenCL"
    ], 
    "host": {
        "compiler": {
            "sources": [
                "REPO_DIR/common/includes/xcl2/xcl2.cpp",
                "./src/host.cpp"
            ], 
            "includepaths": [
                "REPO_DIR/common/includes/xcl2"
            ]
        }, 
        "host_exe": "device_only_buffer"
    }, 
    "containers": [
        {
            "accelerators": [
                {
                    "name": "madd", 
                    "location": "src/madd.cpp"
                }, 
                {
                    "name": "mmult", 
                    "location": "src/mmult.cpp"
                }
            ], 
            "name": "device_only_buf"
        }
    ], 
    "launch": [
        {
            "cmd_args": "BUILD/device_only_buf.xclbin", 
            "name": "generic launch for all flows"
        }
    ], 
    "contributors": [
        {
            "url": "http://www.xilinx.com", 
            "group": "Xilinx"
        }
    ],
    "testinfo": {
        "disable": false,
        "jobs": [
            {
                "index": 0,
                "dependency": [],
                "env": "",
                "cmd": "",
                "max_memory_MB": 32768,
                "max_time_min": 300
            }
        ],
        "targets": [
            "vitis_sw_emu",
            "vitis_hw_emu",
            "vitis_hw"
        ],
        "category": "canary"
    }
}
