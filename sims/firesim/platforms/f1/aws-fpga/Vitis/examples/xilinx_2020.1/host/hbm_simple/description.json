{
    "name": "HBM Simple", 
    "description": [
        "This is a simple example of vector addition to describe how to use HLS kernels with HBM (High Bandwidth Memory) for achieving high throughput."
    ],
    "flow": "vitis",
    "keywords": [
        "HBM", 
        "XCL_MEM_TOPOLOGY", 
        "cl_mem_ext_ptr_t"
    ], 
    "key_concepts": [
        "High Bandwidth Memory", 
        "Multiple HBM Banks"
    ], 
    "ndevice": [  
        "_u25_",
        "u200",
        "zc",
        "vck",
        "u250",
        "aws",
        "samsung"
    ],
    "platform_blacklist": [
        "_u25_",
        "u200",
        "zc",
        "vck",
        "u250",
        "aws",
        "samsung"
    ],
    "os": [
        "Linux"
    ], 
    "runtime": [
        "OpenCL"
    ], 
    "host": {
        "host_exe": "hbm_simple",
        "compiler": {
            "sources": [
                "REPO_DIR/common/includes/xcl2/xcl2.cpp",
                "./src/host.cpp"
            ], 
            "includepaths": [
                "REPO_DIR/common/includes/xcl2"
            ]
        }
    }, 
    "containers": [
        {
            "accelerators": [
                {
                    "compute_units": [
                        {
                            "arguments": [
                                {
                                    "name": "in1", 
                                    "memory": "HBM[0:3]"
                                }, 
                                {
                                    "name": "in2", 
                                    "memory": "HBM[0:3]"
                                }, 
                                {
                                    "name": "out_r", 
                                    "memory": "HBM[0:3]"
                                }
                            ]
                        }
                    ], 
                    "name": "krnl_vadd", 
                    "location": "src/krnl_vadd.cpp"
                }
            ], 
            "name": "krnl_vadd"
        }
    ],
    "launch": [
        {
            "cmd_args": "BUILD/krnl_vadd.xclbin", 
            "name": "generic launch for all flows"
        }
    ], 
    "contributors": [
        {
            "url": "http://www.xilinx.com", 
            "group": "Xilinx"
        }
    ],
    "testinfo": {
        "disable": false,
        "jobs": [
            {
                "index": 0,
                "dependency": [],
                "env": "",
                "cmd": "",
                "max_memory_MB": 32768,
                "max_time_min": 300
            }
        ],
        "targets": [
            "vitis_sw_emu",
            "vitis_hw_emu",
            "vitis_hw"
        ],
        "category": "canary"
    }
}
