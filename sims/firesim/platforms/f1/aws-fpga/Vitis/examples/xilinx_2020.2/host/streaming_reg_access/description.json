{
    "name": "Control and Status Register access continuously streaming kernel (HLS C/C++)", 
    "description": [
        "This is simple example which demonstrate streaming free-running kernel with scalar input and output."
    ],
    "flow": "vitis",
    "keywords": [
        "xclRegRead",
        "xclRegWrite" 
    ], 
    "key_concepts": [
        "Free Running Kernel" 
    ], 
    "platform_whitelist": [
        "u200_qdma"
    ],  
    "ndevice": [
        "u250",
        "zc",
        "vck",
        "xdma",
        "qep",	
        "aws",
        "samsung"
    ],
    "platform_blacklist": [
        "u250",
        "zc",
        "vck",
        "xdma",
        "qep",	
        "aws",
        "samsung"
    ],
    "os": [
        "Linux"
    ], 
    "runtime": [
        "OpenCL"
    ], 
    "host": {
        "host_exe": "streaming_reg_access",
        "compiler": {
            "sources": [
                "REPO_DIR/common/includes/xcl2/xcl2.cpp",
                "REPO_DIR/common/includes/cmdparser/cmdlineparser.cpp",
                "REPO_DIR/common/includes/logger/logger.cpp",
                "./src/host.cpp"
            ], 
            "includepaths": [
                "REPO_DIR/common/includes/xcl2",
                "REPO_DIR/common/includes/cmdparser",
                "REPO_DIR/common/includes/logger"
            ]
        },
        "linker" : {
            "options" : ["-luuid"
                ]
        }
    },
   "gui": false,
   "config_make" : "config.mk",
   "targets": [
        "hw", 
        "hw_emu"
    ],  
    "containers": [
        {
            "accelerators": [
                {
                    "name": "increment", 
                    "location": "src/increment.cpp"
                }
            ], 
            "name": "krnl_incr"
        }
    ],
    "launch": [
        {
            "cmd_args": "-x BUILD/krnl_incr.xclbin -i 5", 
            "name": "generic launch for all flows"
        }
    ], 
    "contributors": [
        {
            "url": "http://www.xilinx.com", 
            "group": "Xilinx"
        }
    ],
    "testinfo": {
        "disable": false,
        "jobs": [
            {
                "index": 0,
                "dependency": [],
                "env": "",
                "cmd": "",
                "max_memory_MB": 32768,
                "max_time_min": 300
            }
        ],
        "targets": [
            "vitis_hw_emu",
            "vitis_hw"
        ],
        "category": "canary"
    }
}
